<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
<body>
    
    <h3>Edit your Listing</h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
        <div class="mb-3"> 
            <label for="title" class="form-label">Title</label>
<input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control">
</div>

<div class="mb-3">
    <label for="description" class="form-label">Description</label>
<textarea class="form-control" name="listing[description]"><%= listing.description %></textarea>

</div>
<div class="mb-3">
    Orignal Listing Image <br>
    <img src="<%= originalImgUrl %>" class="img-thumbnail" alt="Profile Picture">
</div>

<div class="mb-3">
    <label for="image" class="form-label">Upload New Image</label>
<input type="file" name="listing[image]"  class="form-control">
</div>

<div class="mb-3 col-md-4">
    <label for="price" class="form-label">Price</label>
<input type="number" value="<%= listing.price %>" name="listing[price]" class="form-control">
</div>

<div class="mb-3">
    <label for="location" class="form-label">Location</label>
<input type="text" value="<%= listing.location %>" name="listing[location]" class="form-control">

</div>

<div class="mb-3 col-md-8">
    <label for="country" class="form-label">Country</label>
<input type="text" value="<%= listing.country %>" name="listing[country]" class="form-control">

</div>
<br>
<button class="btn btn-dark edit-btn">Edit</button>
<br><br>
    </form>
</body>
</div>
</div>
